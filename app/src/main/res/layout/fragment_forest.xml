<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gereken_mavi"
    android:padding="16dp">

    <!-- İstatistikler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chart_icon"
            android:contentDescription="İstatistik ikon" />

        <TextView
            android:id="@+id/menuStatistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstatistikler"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Rozetler -->
    <LinearLayout
        android:id="@+id/menuAchievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_arrow"
            android:contentDescription="Rozet ikon" />

        <TextView
            android:id="@+id/menuRozet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rozetler"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Market -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/store_icon"
            android:contentDescription="Market ikon" />

        <TextView
            android:id="@+id/menuShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Ayarlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/settings_icon"
            android:contentDescription="Ayarlar ikon" />

        <TextView
            android:id="@+id/menuSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayarlar"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user_icon"
            android:contentDescription="Profil ikon" />

        <TextView
            android:id="@+id/menuUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

</LinearLayout>
